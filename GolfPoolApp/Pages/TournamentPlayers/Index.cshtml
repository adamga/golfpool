@page
@model TournamentPlayersModel
@{
    ViewData["Title"] = "Tournament Players";
}

<h2>Tournament Players</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Country</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model.Players)
        {
            <tr>
                <td>@player.Name</td>
                <td>@player.Country</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@player.Id">Edit</a> |
                    <a asp-page="Delete" asp-route-id="@player.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="Create" class="btn btn-primary">Add New Player</a>