@page "{id:int}"
@model DeleteModel
@{
    ViewData["Title"] = "Delete Tournament Player";
}

<h2>Delete Tournament Player</h2>

<h3>Are you sure you want to delete this player?</h3>
<div>
    <strong>Name:</strong> @Model.Player.Name
</div>
<div>
    <strong>Country:</strong> @Model.Player.Country
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>